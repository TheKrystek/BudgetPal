package json;

import java.security.MessageDigest;

public class Utils {


	public static String sha256(String text) {
		MessageDigest sha = MessageDigest.getInstance("SHA-256");
		sha.update(text.getBytes("UTF-8"));
		byte[] buffer = sha.digest();
