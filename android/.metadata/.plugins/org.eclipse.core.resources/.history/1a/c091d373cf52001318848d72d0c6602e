package json;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.URL;
import java.net.URLConnection;
import java.security.MessageDigest;

import com.google.gson.Gson;

public class WebService {
	GetStatus status;
	URLConnection connection;
	String json;
	String wsPath = "http://mybudgetpal.com/ws/";
	
	private String getJsonFromUrl(String url) throws IOException
	{
		try {
			connection = new URL(wsPath + url).openConnection();
		} catch (Exception e) {
			e.printStackTrace();
		}
		BufferedReader in = new BufferedReader(new InputStreamReader(
                connection.getInputStream()));
		String json = "";
		String line;
		while ((line = in.readLine()) != null) {
			json += line.trim();
		}
		in.close();
		this.json = json;
		return json;
	}
	
	
	public Budgets GetBudgets() throws IOException
	{
		String url = "server2.php?a=getdbudgets";
		this.getJsonFromUrl(url);
		this.status = new GetStatus(this.json); 
		if (this.status.isSet()){
			return null;
		}
		else
		{
			return new Gson().fromJson(this.json, Budgets.class);
		}
	}
	
	
	// Zalogowuje, zwraca false w przypadku błędu, albo true jak sie uda
	public boolean Login(String user, String password) throws Exception
	{
		// Zahashuj haslo
		MessageDigest sha = MessageDigest.getInstance("SHA-256");
		sha.update(password.getBytes("UTF-8")); // Change this to "UTF-16" if needed
		byte[] hash = sha.digest();
		String url = "server.php?a=login&user="+user+"&password="+hash.toString();
		System.out.println(url);
		this.getJsonFromUrl(url);
		this.status = new GetStatus(this.json); 
		if (this.status.isError())
			return false; // czyli nie zalogowano
		else
			return true;  // zalogowano poprawnie
	}


}
